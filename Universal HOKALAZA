makeVisualToggle("Name ESP", 350, function(v) nameEspEnabled = v end)

-- ESP Logic (with proper tracers using Drawing API)
local espFolder = Instance.new("Folder", workspace)
espFolder.Name = "hokalaza_ESP"

-- Drawing Tracers Table
local tracerDrawings = {}

local function clearESP()
    for _,v in pairs(espFolder:GetChildren()) do
        v:Destroy()
    end
    -- Clear tracers
    for _,drawing in pairs(tracerDrawings) do
        if drawing then
            drawing.Visible = false
            drawing:Remove()
        end
    end
    tracerDrawings = {}
end

RunService.RenderStepped:Connect(function()
    clearESP()
    if not masterEspEnabled then return end
    for _,plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer and plr.Character and plr.Character:FindFirstChild("Head") then
            local head = plr.Character.Head

            -- Player ESP
            if playerEspEnabled then
                local adorn = Instance.new("BillboardGui", espFolder)
                adorn.Adornee = head
                adorn.Size = UDim2.new(0,100,0,40)
                adorn.StudsOffset = Vector3.new(0,2,0)
                adorn.AlwaysOnTop = true
                local txt = Instance.new("TextLabel", adorn)
                txt.Size = UDim2.new(1,0,1,0)
                txt.BackgroundTransparency = 1
                txt.TextColor3 = Color3.new(1,1,0)
                txt.TextStrokeTransparency = 0.5
                txt.Text = plr.Name
                txt.Font = Enum.Font.GothamBold
                txt.TextScaled = true
            end
            -- User ESP
            if userEspEnabled then
                local adorn = Instance.new("BillboardGui", espFolder)
                adorn.Adornee = head
                adorn.Size = UDim2.new(0,100,0,40)
                adorn.StudsOffset = Vector3.new(0,3,0)
                adorn.AlwaysOnTop = true
                local txt = Instance.new("TextLabel", adorn)
                txt.Size = UDim2.new(1,0,1,0)
                txt.BackgroundTransparency = 1
                txt.TextColor3 = Color3.new(0.8,0.8,1)
                txt.TextStrokeTransparency = 0.5
                txt.Text = plr.DisplayName
                txt.Font = Enum.Font.GothamBold
                txt.TextScaled = true
            end
            -- Health ESP
            if healthEspEnabled and plr.Character:FindFirstChildOfClass("Humanoid") then
                local health = plr.Character:FindFirstChildOfClass("Humanoid").Health
                local adorn = Instance.new("BillboardGui", espFolder)
                adorn.Adornee = head
                adorn.Size = UDim2.new(0,100,0,40)
                adorn.StudsOffset = Vector3.new(0,4,0)
                adorn.AlwaysOnTop = true
                local txt = Instance.new("TextLabel", adorn)
                txt.Size = UDim2.new(1,0,1,0)
                txt.BackgroundTransparency = 1
                txt.TextColor3 = Color3.new(0,1,0)
                txt.TextStrokeTransparency = 0.5
                txt.Text = "HP: "..math.floor(health)
                txt.Font = Enum.Font.GothamBold
                txt.TextScaled = true
            end
            -- Box ESP (simple square)
            if boxEspEnabled then
                local adorn = Instance.new("BoxHandleAdornment", espFolder)
                adorn.Adornee = plr.Character:FindFirstChild("HumanoidRootPart") or head
                adorn.Size = Vector3.new(4,7,2)
                adorn.Color3 = Color3.new(1,1,1)
                adorn.Transparency = 0.7
                adorn.AlwaysOnTop = true
                adorn.ZIndex = 10
            end
            -- Tracers (Drawing API)
            if tracersEnabled and Drawing then
                local headPos, onscreen = Camera:WorldToViewportPoint(head.Position)
                if onscreen then
                    local tracer = Drawing.new("Line")
                    tracer.From = Vector2.new(Camera.ViewportSize.X/2, Camera.ViewportSize.Y)
                    tracer.To = Vector2.new(headPos.X, headPos.Y)
                    tracer.Color = Color3.new(1,0,0)
                    tracer.Thickness = 2
                    tracer.Transparency = 1
                    tracer.Visible = true
                    table.insert(tracerDrawings, tracer)
                end
            end
            -- Name ESP (above head)
            if nameEspEnabled then
                local adorn = Instance.new("BillboardGui", espFolder)
                adorn.Adornee = head
                adorn.Size = UDim2.new(0,100,0,20)
                adorn.StudsOffset = Vector3.new(0,5,0)
                adorn.AlwaysOnTop = true
                local txt = Instance.new("TextLabel", adorn)
                txt.Size = UDim2.new(1,0,1,0)
                txt.BackgroundTransparency = 1
                txt.TextColor3 = Color3.new(0.6,1,1)
                txt.TextStrokeTransparency = 0.5
                txt.Text = plr.Name
                txt.Font = Enum.Font.Gotham
                txt.TextScaled = true
            end
        end
    end
end)

